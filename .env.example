# ===========================================
# Secure Document Vault - Environment Variables
# ===========================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=documentvault

# Database names for each service
KEYCLOAK_DB=keycloak
MAYAN_DB=mayan
BACKEND_DB=backend

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=changeme_redis_password

# ===========================================
# Keycloak SSO Configuration
# ===========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_admin_password
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_REALM=documentvault
KEYCLOAK_CLIENT_ID=backend-api
KEYCLOAK_CLIENT_SECRET=changeme_client_secret
KEYCLOAK_FRONTEND_CLIENT_ID=frontend-app

# ===========================================
# Mayan EDMS Configuration
# ===========================================
MAYAN_API_TOKEN=changeme_mayan_token

# ===========================================
# Backend API Configuration
# ===========================================
SECRET_KEY=changeme_very_long_secret_key_min_50_chars
ENVIRONMENT=development

# ===========================================
# Frontend Configuration
# ===========================================
REACT_APP_API_URL=http://localhost/api
REACT_APP_KEYCLOAK_URL=http://localhost:8080
REACT_APP_KEYCLOAK_REALM=documentvault
REACT_APP_KEYCLOAK_CLIENT_ID=frontend-app

# ===========================================
# AI Model Configuration
# ===========================================
# Default model to use for document analysis
OLLAMA_DEFAULT_MODEL=llama2
# Alternative models: mistral, codellama, neural-chat

# ===========================================
# Storage Configuration
# ===========================================
# Local filesystem paths (relative to project root)
STORAGE_PATH=./storage
DOCUMENTS_PATH=./storage/documents
UPLOADS_PATH=./storage/uploads

# ===========================================
# Security & CORS
# ===========================================
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
